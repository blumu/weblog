@{ 
  Layout = "page";
  Title = "William Blums's website";
  Description = "Blog entries list page";
}
@using System.Linq

@foreach(var post in Model.GenerateAll?Model.Posts:Enumerable.Take(Model.Posts, 15)) {
  <div>
  <h1><a href="@Model.Root/blog/@(post.Url).html">@post.Title</a></h1>
  @post.Abstract
      
  <p class="meta">
    <span><strong>Published</strong>: @post.Date.ToString("dddd, d MMMM yyyy, h:mm tt", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</span>
    @if (post.Tags.Count() > 0) { 
      <br />      
      <span class="tags"><strong>Tags</strong>: @String.Join(", ", post.Tags).ToLower() </span> 
    }
    <br />
    <a href="@Model.Root/blog/@(post.Url).html">Read the complete article</a>
  </p>
  </div>
}